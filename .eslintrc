{
    "parser": "babel-eslint",
    "extends": [
        "plugin:react-hooks/recommended",
        "airbnb"
    ],
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "linebreak-style": 0,
        "no-tabs": 0,
        "indent": 0,
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-filename-extension": 0,
        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "globals": {
        "window": true,
        "__DEV__": true,
        "localStorage": true
    }
}